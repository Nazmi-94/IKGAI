<form id="commentEditForm" method="post" action="@Url.Action("Edit", "Comment", new { id = Model.Id })">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <input type="hidden" asp-for="Id" class="form-control" />
        <span asp-validation-for="Id" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="commentText" class="control-label"></label>
        <input asp-for="commentText" class="form-control" value="@Model.commentText" />
        <span asp-validation-for="commentText" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="commentDate" class="control-label"></label>
        <input asp-for="commentDate" type="date" class="form-control" value="@Model.commentDate.ToString("yyyy-MM-dd")" />
        <span asp-validation-for="commentDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="userId" class="control-label">User</label>
        <select asp-for="userId" class="form-control" asp-items="ViewBag.users"></select>
        <span asp-validation-for="userId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="button" onclick="submitEditForm()" class="btn btn-primary">Save changes</button>
    </div>
</form>