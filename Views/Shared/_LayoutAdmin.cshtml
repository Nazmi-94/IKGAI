<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Admin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />

</head>
<body>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-2 sidebar">
                <h4 class="text-light">Admin Panel</h4>
                <a asp-controller="Home" asp-action="Index">Home</a>
                <a asp-controller="Comment" asp-action="Index">Comments</a>
                <a asp-controller="User" asp-action="Index">Manage Users</a>
                <a asp-controller="UserProfile" asp-action="Index">User Profile</a>
            </div>

            <!-- Main Content Area -->
            <div class="col-md-10 p-5 content">
                @RenderBody()
            </div>
        </div>
    </div>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
